<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ym_header"
    android:weightSum="1"

    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:text="Ccy Pair"
        android:id="@+id/tvCurrencyPair_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:textSize="@dimen/position_header_textSize"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#fff"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Position Status\n('000)"
        android:id="@+id/tvPosition_header"
        android:layout_alignBottom="@+id/tvRate_header"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:textSize="@dimen/position_header_textSize"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:text="Unrealized PnL"
        android:id="@+id/tvUnrealizedPnl_header"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:textSize="@dimen/position_header_textSize"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"/>

 </LinearLayout>