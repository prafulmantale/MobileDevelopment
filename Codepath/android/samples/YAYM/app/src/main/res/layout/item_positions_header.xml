<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#501a2943"
    >
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Ccy Pair"
        android:id="@+id/tvCurrencyPair_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:id="@+id/tvRate_header"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Position\n('000)"
        android:id="@+id/tvPosition_header"
        android:layout_alignBottom="@+id/tvRate_header"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Unrealized PnL"
        android:id="@+id/tvUnrealizedPnl_header"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:textSize="10sp"/>

 </LinearLayout>