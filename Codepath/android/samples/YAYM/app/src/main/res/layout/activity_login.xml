<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context="prafulmantale.praful.com.yaym.activities.LoginActivity"
    android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/rlCenter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drop_shadow"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/ivLogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ym_logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:background="@drawable/bottom_border_black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />

        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout"

            android:layout_marginBottom="5dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="26sp"
                android:id="@+id/etOrganization"
                android:layout_gravity="center_horizontal"
                android:hint="Organization"
                android:text="YMSBAQA"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="9sp"
                android:background="@drawable/loginscreen_edit_text_style"
                android:textColorHint="#999999"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_lock"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="26sp"
                android:id="@+id/etUserName"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:text="RWPraful"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="10sp"
                android:background="@drawable/loginscreen_edit_text_style"
                android:textColorHint="#999999"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="26sp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPassword"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:text="Test123"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:textSize="10sp"
                android:background="@drawable/loginscreen_edit_text_style"
                android:textColorHint="#999999"
                android:includeFontPadding="true"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="26sp"
                android:text="Log In"
                android:id="@+id/btnLogin"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:background="@drawable/signin_button_style"
                android:onClick="doLogin"
                />
        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Integral Development Corp. 2014"
        android:id="@+id/textView"
        android:layout_below="@+id/rlCenter"
        android:layout_centerHorizontal="true"
        android:textColor="#ffE0E0E0"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"/>
</RelativeLayout>
