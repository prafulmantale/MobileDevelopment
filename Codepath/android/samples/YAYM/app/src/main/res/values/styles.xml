<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="YMActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:actionBarItemBackground">@drawable/ym_logo</item>
    </style>

    <style name="risk_capacity_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/risk_capacity_value</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="yield_details_value" parent="risk_capacity_value">
        <item name="android:layout_weight">0.4</item>
        <item name="android:textColor">@color/yeild_details_header_value</item>
    </style>

    <style name="risk_capacity_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/risk_capacity_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="yield_details_text" parent="risk_capacity_text">
        <item name="android:layout_weight">0.6</item>
    </style>

    <style name="positions_header">
        <item name="android:textColor">@color/positions_header_text</item>
        <item name="android:textSize">@dimen/position_header_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="frequency_pref_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SignButtons" parent="@android:attr/buttonStyleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/signin_button_style</item>
    </style>

</resources>
