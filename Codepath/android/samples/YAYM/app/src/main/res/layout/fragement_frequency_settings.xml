<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_update_title"
        android:layout_margin="10dp"
        android:gravity="left"
        android:textSize="14sp"
        />
    <View
        android:id="@+id/center_divider_horizontal"
        android:layout_below="@id/tvTitle"

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/tvSelectFrequencyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pref_title"
        android:layout_margin="10dp"
        android:gravity="left"
        android:textSize="16sp"
        />
    <RadioGroup
        android:id="@+id/rgUpdateFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RadioButton
            android:id="@+id/rbOneSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/second_two"
            />

        <RadioButton
            android:id="@+id/rbFiveSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seconds_five"
            />

        <RadioButton
            android:id="@+id/rbFifteenSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seconds_fifteen"
            />

        <RadioButton
            android:id="@+id/rbThirtySecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seconds_thirty"
            />
        <RadioButton
            android:id="@+id/rbManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manual"
            />

    </RadioGroup>

    <TextView
        android:id="@+id/tvDataWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_update_warning"
        android:layout_margin="10dp"
        android:textSize="16sp"/>

</LinearLayout>