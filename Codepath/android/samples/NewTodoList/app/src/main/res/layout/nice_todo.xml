<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_view_item_border"
    >

    <TextView
        android:id="@+id/etTodoItemText_nice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:layout_toLeftOf="@+id/ivSave"
        android:background="@drawable/item_no_border"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ivSave"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_green_save"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etTodoItemText_nice"
        android:background="#ff55acee"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:gravity="center_vertical|center_horizontal"
        android:padding="1dp"

        >

        <TextView
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Done"
            android:id="@+id/tvDone"
            android:drawableTop="@drawable/ic_navigation_accept"
            android:layout_weight="0.16"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="12dp"
            />

        <TextView
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Schedule"
            android:id="@+id/tvSchedule"
            android:drawableTop="@drawable/ic_action_event"
            android:layout_weight="0.22"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"/>

        <TextView
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Place"
            android:id="@+id/tvPlace"
            android:drawableTop="@drawable/ic_action_place"
            android:layout_weight="0.18"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"/>

        <TextView
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Share"
            android:id="@+id/tvShare"
            android:drawableTop="@drawable/ic_action_share"
            android:layout_weight="0.19"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"/>

        <TextView
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Edit"
            android:id="@+id/tvEdit"
            android:drawableTop="@drawable/ic_action_edit"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:paddingTop="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Remove"
            android:id="@+id/tvRemove"
            android:drawableTop="@drawable/ic_action_remove"
            android:layout_weight="0.20"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"
            />

    </LinearLayout>




</RelativeLayout>
