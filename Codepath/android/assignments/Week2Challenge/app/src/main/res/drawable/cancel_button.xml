<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#17090f18" />
            <stroke
                android:width="1dp"
                android:color="#17090f18" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#17090f18"
                android:endColor="#17090f18"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#17090f18" />
        </shape>
    </item>
</selector>