<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:com.custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="prafulmantale.praful.com.instagramviewer.activities.UserDetailsActivity">

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/llUserDetailsHeader"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >
    <ImageView
        android:background="@null"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivUserDetailsProfilePicture"
        android:maxHeight="40dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/ic_launcher"
        />

    <prafulmantale.praful.com.instagramviewer.widgets.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_marginLeft="45dp"
        android:id="@+id/tvPostsCount"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/ivUserDetailsProfilePicture"
        android:gravity="center_vertical"
        com.custom:typeface="fonts/Roboto-Medium.ttf"
        />

    <prafulmantale.praful.com.instagramviewer.widgets.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_marginLeft="15dp"
        android:id="@+id/tvFollowersCount"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/tvPostsCount"
        android:gravity="center_vertical"
        com.custom:typeface="fonts/Roboto-Medium.ttf"
        />

    <prafulmantale.praful.com.instagramviewer.widgets.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_marginLeft="15dp"
        android:id="@+id/tvFollowingCount"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/tvFollowersCount"
        com.custom:typeface="fonts/AlexBrush-Regular.ttf"
        />

    </LinearLayout>

    <prafulmantale.praful.com.instagramviewer.widgets.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/tvUserFullName"
        android:textSize="14sp"
        android:layout_below="@+id/llUserDetailsHeader"
        com.custom:typeface="fonts/DancingScript-Regular.otf"
        />

    <prafulmantale.praful.com.instagramviewer.widgets.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tvUserBio"
        android:textSize="8sp"
        android:layout_below="@+id/tvUserFullName"
        com.custom:typeface="fonts/Roboto-Regular.ttf"
        />

    <prafulmantale.praful.com.instagramviewer.widgets.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tvWebsite"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/tvUserBio"
        com.custom:typeface="fonts/AlexBrush-Regular.ttf"
        />

</RelativeLayout>
