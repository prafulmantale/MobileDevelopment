
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <gradient android:angle="270"
                android:startColor="#4197ee"
                android:endColor="#79bbff"/>
            <stroke android:color="#ff288199" android:width="0dp"/>
            <corners android:radius="5dp"/>
            <padding    android:bottom="0dp"
                        android:left="15dp"
                        android:right="15dp"
                        android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>

            <gradient android:angle="270"
                android:startColor="#3c77b3"
                android:endColor="#006699"/>
            <stroke android:color="#ff288199" android:width="0dp"/>
            <corners android:radius="5dp"/>
            <padding    android:bottom="0dp"
                android:left="15dp"
                android:right="15dp"
                android:top="0dp"/>
        </shape>
    </item>

</selector>