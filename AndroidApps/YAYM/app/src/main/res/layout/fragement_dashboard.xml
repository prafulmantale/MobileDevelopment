<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".YieldMangerActivity"
    android:background="#ffEAEAEA"
    android:id="@+id/swipeRefreshLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/riskcapacity"
        android:showDividers="middle"
        android:background="@color/risk_capacity_background"
        android:divider="@drawable/risk_capacity_divider"
        android:dividerPadding="5dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <prafulmantale.praful.com.yaym.widgets.YieldPercentageView
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="65dp"
            layout="@layout/item_positions_header"
            android:id="@+id/ypv"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_gravity="center">
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvYieldValue"
                style="@style/risk_capacity_value"
                android:text="0"
                custom:typeface="fonts/OpenSans-Regular.ttf"
                />
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvYeildText"
                style="@style/risk_capacity_text"
                custom:typeface="fonts/OpenSans-Regular.ttf"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvVolumeValue"
                style="@style/risk_capacity_value"
                android:text="0"
                custom:typeface="fonts/OpenSans-Regular.ttf"
                />
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvVolumeText"
                style="@style/risk_capacity_text"
                custom:typeface="fonts/OpenSans-Regular.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvRealizedPnLValue"
                style="@style/risk_capacity_value"
                android:text="0"
                custom:typeface="fonts/OpenSans-Regular.ttf"
                />
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvRealizedPnLText"
                style="@style/risk_capacity_text"
                custom:typeface="fonts/OpenSans-Regular.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvUnRealizedPnLValue"
                style="@style/risk_capacity_value"
                android:text="0"
                custom:typeface="fonts/OpenSans-Regular.ttf"
                />
            <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/tvUnRealizedPnLText"
                style="@style/risk_capacity_text"
                custom:typeface="fonts/OpenSans-Regular.ttf"/>
        </LinearLayout>


    </LinearLayout>

    <include
        android:layout_below="@id/riskcapacity"
        android:layout_alignParentTop="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_positions_header"
        android:id="@+id/lvHeader"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvPositionsList"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lvHeader"
        android:dividerHeight="5.0sp"
        android:divider="#ffEAEAEA"
        android:choiceMode="singleChoice"
        android:background="@color/white"
        />
</RelativeLayout>
