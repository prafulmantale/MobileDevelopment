<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/yeild_details_header_background"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <prafulmantale.praful.com.yaym.widgets.Charts.LineChart
        android:id="@+id/lineChart"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />

    <prafulmantale.praful.com.yaym.widgets.Charts.OHLCChart
        android:id="@+id/ohlcChart"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />

    <prafulmantale.praful.com.yaym.widgets.Charts.BarChart
        android:id="@+id/barChart"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        />
</LinearLayout>

    </ScrollView>