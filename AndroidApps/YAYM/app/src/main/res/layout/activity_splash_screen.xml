<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="prafulmantale.praful.com.yaym.activities.SplashScreenActivity"
    android:background="@drawable/welcome_backgroud">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/rlSplashscreen"
        >
        <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/product_name"
            android:id="@+id/tvAppName"
            android:textStyle="normal"
            android:textSize="30sp"
            android:padding="1dp"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="43dp"
            custom:typeface="fonts/OpenSans-Regular.ttf"/>

        <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/product_usp"
            android:id="@+id/tvAppUSP"
            android:textStyle="normal"
            android:gravity="left"
            android:padding="1dp"
            android:textSize="20sp"
            android:textColor="@color/app_usp_color"
            android:layout_below="@+id/tvAppName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            custom:typeface="fonts/OpenSans-Regular.ttf"
            />
    </RelativeLayout>
</RelativeLayout>
