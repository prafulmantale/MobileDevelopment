<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ym_header"
    android:weightSum="1"

    >
    <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:text="Ccy Pair"
        android:id="@+id/tvCurrencyPair_header"
        android:layout_marginLeft="2dp"
        style="@style/positions_header"
        custom:typeface="fonts/OpenSans-Regular.ttf"
        />


    <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Position Status\n('000)"
        android:id="@+id/tvPosition_header"
        android:layout_alignBottom="@+id/tvRate_header"
        android:layout_marginLeft="1dp"
        style="@style/positions_header"
        custom:typeface="fonts/OpenSans-Regular.ttf"
       />

    <prafulmantale.praful.com.yaym.widgets.TypefacedTextView
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:text="Unrealized PnL"
        android:id="@+id/tvUnrealizedPnl_header"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        style="@style/positions_header"
        custom:typeface="fonts/OpenSans-Regular.ttf"
        />

 </LinearLayout>