<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#501a2943" />
            <stroke
                android:width="1dp"
                android:color="#501a2943" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#501a2943"
                android:endColor="#501a2943"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#501a2943" />
        </shape>
    </item>
</selector>