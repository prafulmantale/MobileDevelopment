<trenduce.com.trenduce.Utils.FragmentNavigationDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context="trenduce.com.trenduce.activity.MainActivity">

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ListView
        android:id="@+id/lvDrawerMenu"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/drawer_divider"
        android:dividerHeight="1dp"
        android:background="@color/drawer_background"
        android:listSelector="@drawable/drawer_list_item_bg_selector"
        android:layout_gravity="start"
        >
    </ListView>

</trenduce.com.trenduce.Utils.FragmentNavigationDrawer>
