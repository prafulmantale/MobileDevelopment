<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffef2a1f" />
            <stroke
                android:width="1dp"
                android:color="#ff990a1d" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffef3527"
                android:endColor="#ff991130"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff991b20" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>