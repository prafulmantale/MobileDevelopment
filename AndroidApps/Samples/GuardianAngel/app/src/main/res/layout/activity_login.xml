<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="duggleetech.com.guardianangel.activity.LoginActivity"
    android:background="@drawable/guardianangel">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlLoginPanel"
        android:background="@color/login_panel_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:padding="10dp">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etMobileNumber"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:hint="@string/hint_mobile_number"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="phone"
           />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:layout_below="@+id/etMobileNumber"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="textPassword"
            android:hint="@string/hint_password"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/forgot_password_text"
            android:id="@+id/tvForgotPassword"
            android:layout_below="@+id/etPassword"
            android:textColor="@android:color/white"
            android:autoLink="all"
            android:linksClickable="true"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:textSize="18sp"

            android:layout_centerHorizontal="true" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/btnLogin"
            android:text="@string/login_button_text"
            android:background="@drawable/login_button_style"
            android:textColor="@android:color/white"
            android:layout_below="@+id/etPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="45dp"
            android:textStyle="normal"
            android:visibility="visible"
            android:textSize="22sp"
            />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_label_text"
        android:id="@+id/tvRegister"
        android:clickable="true"
        android:layout_below="@+id/rlLoginPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:padding="15dp"/>


</RelativeLayout>
